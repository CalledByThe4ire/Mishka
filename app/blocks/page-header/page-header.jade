include ../icon/icon
include ../nav/nav
include ../btn/btn

mixin page-header()
	+b('header').page-header&attributes(attributes)
		+e.logo(class='--visible')
			+e('a').link(href='#')
				+icon('logo', 'logo-mobile', true, '86', '35')&attributes(attributes)
			+e('a').toggle(href='#')
				+icon('icon--close', 'nav-toggle-close', true, '22', '22')&attributes(attributes)

		+nav(getData('nav'))

		+e.footnote
			span
				| Бесплатная доставка по России

		+e('h1').heading
			| Милые штуки ручной<br>работы для дома

		+e.btn-wrapper
			+btn(class='--left')
			+btn(class='--right')
